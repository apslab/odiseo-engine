- content_for(:title) do
  Asientos

- content_for(:breadcrumbs) do
  = breadcrumbs do |breadcrumb|
    - breadcrumb.item current_company.name.titlecase, root_path
    - breadcrumb.item 'Asientos', entries_path
    - breadcrumb.item 'Listado', entries_path, :active => true

- if can?(:create, Entry)
  - content_for(:controls) do
    = controls do |control|
      - control.item t('scaffold.actions.new', :item => Entry.model_name.human).titlecase, new_entry_path, :icon => 'add'

- @exercises.each do |exercise|
  .block
    %h2= "Ejercicio #{exercise.label}"
    - if exercise.entries.any?
      %table
        %tr
          %th= Entry.human_attribute_name('description')
          %th= Entry.human_attribute_name('date_on')
          %th Debe
          %th Haber
          %th Saldo
          %th
          %th
          %th

        - exercise.entries.each do |entry|
          %tr
            %td= entry.description
            %td= entry.date_on.to_s(:default)
            %td= number_to_currency(entry.details.debit)
            %td= number_to_currency(entry.details.credit)
            %td= number_to_currency(entry.details.balance)
            %td= link_to icon('application_get', :small, :title => t('scaffold.actions.show').titlecase), entry
            %td= link_to icon('application_edit', :small, :title => t('scaffold.actions.edit').titlecase), edit_entry_path(entry)
    %br
    .clear

