- content_for(:title) do
  = t('scaffold.actions.new', :item => Account.model_name.human).titlecase

- content_for(:breadcrumbs) do
  = breadcrumbs do |breadcrumb|
    - breadcrumb.item current_company.name.titlecase, root_path
    - breadcrumb.item "Cuentas", accounts_path
    - breadcrumb.item 'Nuevo', new_account_path, :active => true

- content_for(:controls) do
  = controls do |control|
    - control.item t('scaffold.actions.back').titlecase, accounts_path, :icon => 'application_view_list'

= render 'form'

